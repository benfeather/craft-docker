FROM php:7-fpm-alpine

# ----------------------------------------
# Install / Update Packages
# ----------------------------------------

# Add docker-php-extension-installer
# See https://github.com/mlocati/docker-php-extension-installer for more information
ADD https://raw.githubusercontent.com/mlocati/docker-php-extension-installer/master/install-php-extensions /usr/local/bin/
RUN chmod uga+x /usr/local/bin/install-php-extensions && \
    sync

# Install packages
RUN apk update \
    && \
    apk add --no-cache \
        nano \
        mariadb-client \
        mariadb-connector-c \
    && \
    install-php-extensions \
        imagick \
        pdo_mysql \
        intl \
        zip

# Install Composer and Plugins
RUN curl -sS https://getcomposer.org/installer | php -- --install-dir=/usr/local/bin/ --filename=composer && \
    composer global require \
        hirak/prestissimo \
        repman-io/composer-plugin

# ----------------------------------------
# Configure
# ----------------------------------------

# Use the default production configuration
RUN cp $PHP_INI_DIR/php.ini-production $PHP_INI_DIR/php.ini

# Copy php-custom.ini
COPY ./docker-config/php/php-custom.ini $PHP_INI_DIR/conf.d/php-custom.ini

# ----------------------------------------
# Setup Craft CMS
# ----------------------------------------

WORKDIR /var/www/html/

# Copy Craft CMS
COPY --chown=www-data:www-data ./cms/ .

# Create the storage directory
RUN mkdir -p storage/ && \
    chown -R www-data:www-data storage/

# Create the cpresources directory
RUN mkdir -p web/cpresources/ && \
    chown -R www-data:www-data web/cpresources/

# If `composer.lock` OR `/vendor` is missing, 
# - Do a `composer install` without running any Composer scripts
# - Force permissions
# Start php-fpm
CMD if [ ! -f "./composer.lock" ] || [ ! -d ./vendor -o ! "$(ls -A ./vendor)" ]; then \
        composer install --no-scripts --optimize-autoloader --no-interaction; \
        chown -R www-data:www-data vendor/; \
    fi \
    && \
    php-fpm